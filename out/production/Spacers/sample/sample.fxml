          style="-fx-background-image:url(https://image.freepik.com/free-vector/realistic-galaxy-background_52683-12122.jpg);
            -fx-background-repeat:no-repeat;-fx-background-size:cover"
          alignment="center" vgap="10" hgap="10" gridLinesVisible="false"  onKeyPressed="#ManageMovment" >
    <ImageView fx:id="SpaceShip" fitHeight="100" fitWidth="100" >
        <image>
            <Image url="@./Images/SpaceShip.png"/>
        </image>
    </ImageView>
</GridPane>
